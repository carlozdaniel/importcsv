<p id="notice"><%= notice %></p>
<h3> Product </h3>
<br>

<div class="row">
  <div class="col-md-12">
    <div class="table-responsive">
      <table class="table table-responsive">
        <thead>
          <tr>
            <th>Price</th>
            <th>Total</th>
            <th>Seller</th>
            <th>Seller address</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
            <tr>
              <td><%= @product.price %></td>
              <td><%= @product.total %></td>
              <td><%= @product.seller.name %></td>
              <td><%= @product.seller.address %></td>
              <td><%= link_to 'Edit', edit_product_path(@product) %></td>
            </tr>
        </tbody>
      </table>
    </div>
  </div>

  <h>BUYERS</h>
  <div class="col-md-12">
    <div class="table-responsive">
      <table class="table table-responsive">
        <thead>
          <tr>
            <th>Name</th>
          </tr>
        </thead>
        <tbody>
          <% @buyer.each do |buyer| %>
            <tr>
              <td><%= buyer.buyer.name %></td>
            </tr>
          <%end%>
        </tbody>
      </table>
    </div>
  </div>
</div>

  <%= link_to 'Back', products_path %>